# SmartBI Backend Environment Variables

# Database Configuration (Supabase)
DATABASE_URL=your_supabase_database_url
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Google Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Query Specific Configuration
AI_QUERY_RATE_LIMIT_MAX=10
AI_QUERY_RATE_LIMIT_WINDOW_MS=60000
CONNECTION_MANAGEMENT_RATE_LIMIT_MAX=20
MAX_QUERY_LENGTH=1000
MAX_QUERY_HISTORY_DAYS=30

# Database Connection Defaults
DEFAULT_DB_TIMEOUT=30000
MAX_CONNECTION_POOLS=10

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@smartbi.com

# Logging
LOG_LEVEL=info
LOG_AI_QUERIES=true

# Company/Subscription Limits
FREE_TIER_AI_QUERIES_PER_DAY=50
FREE_TIER_CONNECTIONS_LIMIT=2
BASIC_TIER_AI_QUERIES_PER_DAY=500
BASIC_TIER_CONNECTIONS_LIMIT=10